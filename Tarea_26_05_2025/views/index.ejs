<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Base de datos</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Listado de Usuarios</h1>
    <table>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Acciones</th>
      </tr>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <a href="/edit/<%= user.id %>" class="btn-action">Editar</a>
            <a href="/delete/<%= user.id %>" class="btn-action">Eliminar</a>
          </td>
        </tr>
      <% }); %>
    </table>

    <h2>Agregar usuario</h2>
    <form class="formulario2" action="/add" method="post">
      <label for="name">Nombre</label>
      <input type="text" name="name" id="name" required maxlength="45" placeholder="Nombre del usuario">

      <label for="email">Correo</label>
      <input type="email" name="email" id="email" required maxlength="45" placeholder="Correo">

      <button type="submit" class="btn">Agregar</button>
    </form>
  </div>
</body>
</html>
