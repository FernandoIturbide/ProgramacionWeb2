        <label for="name">Nombre</label>
        <input type="text" name="name" id="name" required maxlength="45" placeholder="Nombre del usuario" value="<%= user.name %>">
      </div>

      <div class="form-group">
        <label for="email">Correo</label>
        <input type="email" name="email" id="email" required maxlength="45" placeholder="Correo electrÃ³nico" value="<%= user.email %>">
      </div>

      <button type="submit" class="btn">Actualizar</button>
      <a href="/dashboard" class="btn" style="background-color: #aaa;">Cancelar</a>
    </form>
  </div>
</body>
</html>
